/* pages/collect/collect.wxss */
.outer-container {
    position: sticky;
    top: 0;
    background-color: #ffffff;
    z-index: 10;
}

.tab-content {
    min-height: 140rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: rgba(140, 152, 174, 1);
}

.check-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 26rpx 30rpx;
}

.check {
    color: #09AAFF;
    width: 130rpx;
}

.delete {
    font-size: 30rpx;
    color: #9e9e9e;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.selected {
    color: #fe4b5e;
}

.delete l-icon {
    margin-right: 10rpx;
}

.check-canecl {
    color: #09AAFF;
}

.swipeable-header {
    margin: 0 auto;
    width: 327rpx !important;
    border: 0 !important;
}

.swipeable-inactive-class {
    border-width: 8rpx !important;
}

.swipeable-active-class {
    font-weight: 900 !important;
    font-size: 34rpx !important;
    border-width: 6rpx !important;
}

.line-class {
    width: 60rpx !important;
}

.file {
    width: 700rpx;
}