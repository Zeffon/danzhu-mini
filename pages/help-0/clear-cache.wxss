@import "../../wxss/help-demo.wxss";

.danzhu-wechat {
    font-family: danzhu !important;
    font-size: 40rpx !important;
    font-style: normal;
    color: #02c161 !important;
}

.btn-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
}

.clear-btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #09AAFF;
    color: #ffffff;
    width: 270rpx;
    height: 76rpx;
    border-radius: 180rpx;
}

.bottom-container {
    width: 100%;
    height: 108rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    background-color: #e1f3ff;
}

.wechat-text {
    color: #212121;
    font-weight: 900;
    font-size: 30rpx;
    margin-left: 10rpx;
}