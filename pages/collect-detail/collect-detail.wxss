.danzhu {
    font-family: danzhu !important;
    font-size: 36rpx !important;
    font-style: normal;
    color: #000000 !important;
    font-weight: 600;
}

.more-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
}

.more-container text {
    margin-top: 6rpx;
}

.bottom-container {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background-color: #f9f9f9;
}

.code-btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #09AAFF;
    color: #ffffff;
    height: 70rpx;
    width: 350rpx;
    font-size: 24rpx;
    border-radius: 50rpx;
}