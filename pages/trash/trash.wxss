
.container {
    display: flex;
    flex-direction: column;
    padding-bottom: 60rpx;
}

.header {
    padding: 30rpx 0;
    position: sticky;
    top: 0;
    background-color: #ffffff;
    z-index: 10;
    display: flex;
    flex-direction: column;
}

.header-title {
    font-size: 30rpx;
    line-height: 36rpx;
    color: #212121;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    letter-spacing: 2px;
}

.p-container {
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    height: 420rpx;
    background-color: #ffffff;
}

.title {
    align-items: center;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    color: #212121;
}

.main-container {
    margin-top: 60rpx;
    color: #212121;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content image {
    width: 60rpx;
    height: 60rpx;
    padding: 20rpx;
    background-color: #f5f5f5;
    border-radius: 50%;
}

.content text {
    margin-top: 20rpx;
}

.cancel {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    width: 92%;
    height: 100rpx;
    background-color: #f9f9f9;
    color: #212121;
    font-size: 30rpx;
    font-weight: bold;
}
