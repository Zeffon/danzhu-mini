.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 100%;
  height: 560rpx;
}

.main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.title {
  font-size: 30rpx;
  color: #333333
}

.summary {
  font-size: 22rpx;
  color: #444444
}

.hr {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 640rpx;
  height: 4rpx;
  background-color: #E9E9E9;
}

.sign-btn {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #3BAA33;
  color: #ffffff;
  height: 100rpx;
  width: 300rpx;
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
}

.sign-text {
  margin-left: 20rpx;
}

.join-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #09AAFF;
  color: #ffffff;
  height: 250rpx;
  width: 250rpx;
  padding: 20rpx 20rpx;
  border-radius: 180rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.danzhu {
  font-family: danzhu !important;
  font-size: 48rpx;
  font-style: normal;
  color: #ffffff !important;
}

.danzhu1 {
  font-family: danzhu !important;
  font-size: 48rpx;
  font-style: normal;
  color: #09AAFF !important;
}

.bottom-conatiner {
  display: flex;
  position: fixed;
  bottom: 50rpx;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
}

.moments {
  margin-right: 20rpx;
} 

.send-moments-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #e1f3ff;
  color: #09AAFF;
  height: 80rpx;
  width: 280rpx;
  padding: 10rpx 10rpx;
  border-radius: 100rpx;
}

.send-moments-btn l-icon {
  margin-right: 16rpx;
}

.friend {
  margin-left: 20rpx;
}

.send-friend-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #09AAFF;
  color: #ffffff;
  height: 80rpx;
  width: 280rpx;
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
}

.send-friend-btn l-icon {
  margin-right: 16rpx;
}