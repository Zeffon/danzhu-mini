
.container {
  margin-top: 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  width: 680rpx;
  box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.5);
  border-radius: 4rpx;
}

.header-container {
  color: #000000;
  font-size: 24rpx;
  height: 60rpx;
  border-bottom: 1px solid #f7f7f7;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.status-text {
  color: #F4516C;
}

.main-container {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-between;
}

.counter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #666666;
  font-size: 24rpx;
}

.bottom-container {
  border-top: 1px #eee dashed;
  padding: 6rpx 30rpx;
}

.bottom-container .summary {
  width: 100%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom-container text {
  font-size: 22rpx;
  color: #999;
}

.l-summary-class {
  padding-left: 0rpx !important;
  padding-right: 0rpx !important;
}

.l-body-class {
  padding-left: 0 !important;
}

.summary {
  width: 100%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-detail-container {
  display: flex;
  align-items: center;
}

.summary-detail-container l-icon {
  margin-left: 6rpx;
}

.disabled{
  opacity: 0.3;
}