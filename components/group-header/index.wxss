/* components/group-detail/index.wxss */
.container {
  margin-top: 6rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  width: 700rpx;
  box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.5);
  border-radius: 4rpx;
  padding: 10rpx 20rpx;
  color: #212121;
}

.header-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  width: 100%;
  font-size: 24rpx;
}

.header-container view {
  flex: 1;
}

.code-container {
  display: flex;
  flex-direction: row;
}

.title-container {
  color: #212121;
  font-size: 24rpx;
  padding: 6rpx 0;
}

.admin-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
}

.nickname {
  color: #212121;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

