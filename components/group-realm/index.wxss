/*引入公共样式*/
@import "../../wxss/danzhu.wxss";

.container {
  box-sizing: border-box;
  background-color: #ffffff;
  max-height: 800rpx;
  min-height: 500rpx;
  margin-bottom: 100rpx;
}

.inner-container {
  padding: 30rpx 30rpx 0 30rpx;
}

.info-container {
  display: flex;
  flex-direction: row;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 26rpx;
}

.not-set-name {
  color: #999999;
}

.btn-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 20rpx;
  font-size: 28rpx;
  height: 70rpx;
  color: #ffffff;
}

.edit-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #09AAFF;
  height: 50rpx;
  width: 160rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0px 0px 8px 0px rgba(0, 89, 253, 0.438);
  border-radius: 30rpx;
}

.no-edit-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #999999;
  height: 50rpx;
  width: 160rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.delete-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #F4516C;
  height: 50rpx;
  width: 160rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0px 0px 8px 0px rgba(255, 100, 100, 0.5);
  border-radius: 30rpx;
}

.hr {
  margin-top: 30rpx;
  width: 690rpx;
  height: 2rpx;
  background-color: #E9E9E9;
}

.remark-container {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.remark-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.no-remark-tip{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999999;
}

.remark {
  color: #666666;
}

.remark-text {
  margin-top: 16rpx;
}

.join-time {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #212121;
}

.bottom-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #f7f7f7;
  position: absolute;
  bottom: 0;
}

.bottom-btn text {
  color: #212121;
}
