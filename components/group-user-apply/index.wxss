/* components/group-user-apply/index.wxss */

.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 750rpx;
  margin-top: 10rpx;
  padding: 14rpx 0;
}

.user-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  margin-left: 24rpx;
}

.main-container {
  display: flex;
  flex-direction: column;
  margin-left: 14rpx;
}

.info {
  display: flex;
  flex-direction: row;
}

.nickname-status {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; 
  width: 360rpx;
}

.nickname {
  margin-left: 20rpx;
}

.time {
  margin-top: 8rpx;
  color: #9e9e9e;
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.no-deal-text {
  color: #F4516C;
}

.ellipsis {
  margin-right: 30rpx;
}