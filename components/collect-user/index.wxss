/* components/collect-user/index.wxss */
.left {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx;
    color: #212121;
    font-size: 28rpx;
}

.avatar {
    width: 72rpx;
    height: 72rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
}

.right-bottom {
    color: #9e9e9e;
    font-size: 22rpx;
}

.time {
    margin-right: 100rpx;
}

.status1 {
    color: #09AAFF;
}

.status2 {
    color: #F4516C;
}

.status3 {
    color: #34bfa3;
}

.right {
    height: 140rpx;
    display: flex;
    direction: row;
    text-align: center;
    vertical-align: middle;
    justify-content: space-around;
    line-height: 140rpx;
    background: #F4516C;
    color: #fff;
    font-size: 28rpx;
}