.container {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #212121;
    font-size: 28rpx;
    background-color: #fff;
    height: 110rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-right: 20rpx;
}

.image-container {
    margin-right: 20rpx;
}

.img {
    width: 72rpx;
    height: 72rpx;
    border-radius: 10rpx;
}

.main-container {
    width: 560rpx;
}

.right-bottom {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #9e9e9e;
    font-size: 20rpx;
    margin-top: 8rpx;
}

.countdown {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.countdown-blue {
    width: 4rpx;
    background: transparent;
    color: #fe4b5e;
    font-size: 20rpx;
    height: 28rpx !important;
}

.countdown-text {
    color: #fe4b5e;
    font-size: 20rpx;
    line-height: 20px !important;
}