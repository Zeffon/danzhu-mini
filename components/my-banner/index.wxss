/*引入公共样式*/
@import "../../wxss/danzhu.wxss";

.danzhu {
  font-family: danzhu !important;
  font-size: 24rpx;
  font-style: normal;
  color: #09AAFF !important;
}

.container {
  background-color: #e1f3ff;
  height: 360rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.inner-container {
  position: relative;
  box-sizing: border-box;
  width: 690rpx;
  height: 260rpx;
  background-color: #ffffff;
  padding-left: 38rpx;
  padding-right: 38rpx;
  box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
  border-radius: 4rpx;
}

.no-login {
  width: 140rpx;
  height: 140rpx;
}

.info-container {
  display: flex;
  flex-direction: row;

}

.avatar-container {
  position: relative;
  top: -18rpx;
}

.avatar {
  border-radius: 4rpx;
}

.code {
  position: relative;
  right: 90rpx;
  top: 80rpx;
}

.code-text {
  color: #212121;
  font-size: 24rpx;
}

.auth-btn {
  position: absolute;
  top: 28rpx;
  /*top: -50rpx;*/
  right: 0;
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
  font-size: 24rpx;
  color: #09AAFF;
}

.row-bottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.bottom-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
  color: #999999;
  width: 580rpx;
  justify-content: space-around;
}

.left {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.left text:first-child {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #09AAFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.v-line {
  width: 3rpx;
  height: 50rpx;
  background-color: #dddddd;
}

.right {
  height: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.right text:first-child {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #09AAFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}